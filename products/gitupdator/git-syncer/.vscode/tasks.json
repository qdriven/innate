{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "go: build",
            "type": "shell",
            "command": "go",
            "args": ["build", "-v", "./..."],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "go: run",
            "type": "shell",
            "command": "go",
            "args": ["run", "main.go"],
            "group": {
                "kind": "build"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "go: test all",
            "type": "shell",
            "command": "go",
            "args": ["test", "-v", "./..."],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "go: test package",
            "type": "shell",
            "command": "go",
            "args": ["test", "-v", "${fileDirname}"],
            "group": {
                "kind": "test"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "go: test with coverage",
            "type": "shell",
            "command": "go",
            "args": ["test", "-v", "-coverprofile=coverage.out", "./..."],
            "group": {
                "kind": "test"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": ["$go"]
        }
    ]
}
